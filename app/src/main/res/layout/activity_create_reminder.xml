<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Study.Activity.CreateReminderActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/grey"
            app:layout_constraintTop_toTopOf="parent">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rem_title"
                android:hint="Enter Title for Reminder"
                android:layout_marginTop="2dp"
                android:paddingLeft="9dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="10dp"
                android:minHeight="46dp"
                android:background="@color/white"/>
            <EditText
                android:id="@+id/body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="9dp"
                android:hint="Enter Message for Reminder"
                android:layout_marginHorizontal="5dp"
                android:background="@color/white"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rem_student"
                android:text="Send to All Students"
                android:layout_marginHorizontal="3dp"
                app:cornerRadius="9dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rem_staff"
                android:text="Send to All Faculties"
                android:layout_marginHorizontal="3dp"
                app:cornerRadius="9dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rem_all"
                android:text="Send to All Users"
                android:layout_marginHorizontal="3dp"
                app:cornerRadius="9dp"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>